@model List<UserInRoleViewModel>
@{
    ViewData["Title"] = "AddOrRemoveUsers";
    var RoleId = ViewBag.RoleId;
}

<h1>Add Or Remove Users</h1>


<form class="mt-3" asp-action="AddOrRemoveUsers" asp-route-RoleId="@RoleId">
    @for (var i = 0; i < Model.Count; i++)
    {
        <div class="form-group">
            <input asp-for="@Model[i].IsSelected" />
            <label asp-for="@Model[i].IsSelected">@Model[i].UserName</label>
        </div>
        <input hidden asp-for="@Model[i].UserId" />
        <input hidden asp-for="@Model[i].UserName" />
    }
    <div class="mt-3">

        <input type="submit" value="Update" class="btn btn-success" />
        <a asp-action="Edit" asp-controller="Role" asp-route-Id="@RoleId" class="btn btn-light">Cancel</a>
    </div>

</form>
